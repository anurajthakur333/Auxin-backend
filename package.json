{
  "name": "auxin-backend",
  "version": "1.0.0",
  "description": "Backend API for Auxin Media",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc",
    "start": "NODE_ENV=production tsx src/server.ts",
    "start:prod": "tsx src/server.ts",
    "start:fallback": "node start.js",
    "start:compiled": "NODE_ENV=production node dist/server.js",
    "install:prod": "npm ci --omit=dev",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "8.1.0",
    "express-validator": "7.2.1",
    "googleapis": "^159.0.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "node-fetch": "3.3.2",
    "typescript": "^5.2.2",
    "tsx": "4.20.6",
    "xss": "1.0.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "5.1.3",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0"
  }
}
